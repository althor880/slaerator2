<% title "Cases Found" %>

<table>
  <tr>
    <th>Case Number</th>
    <th>Owner</th>
    <th>Status</th>
    <th>Opened</th>
    <th>Closed</th>
    <th>Subject</th>
    <th>Analyze</th>
  </tr>
  <% for mycase in @cases %>
    <%="<div id='#{mycase.case_number}'>"%>
      <tr>
        <td><%=h mycase.case_number %></td>
        <td><%=h mycase.owner_name %></td>
        <td><%=h mycase.status %></td>
        <td><%=h mycase.created_date.to_date %></td>
        <td><%=h mycase.closed_date.to_date %></td>
        <td><%=h mycase.subject %></td>
        <td>
          <% if mycase.analyzed? %>
            <%= h mycase.metsla %>
          <% else %>
            <div id="analyze_form">
              <% form_remote_tag :url => analyze_sf_case_path(mycase) do %>
                <%= submit_tag 'Analyze Case' %>
              <% end %>
            </div>
          <% end %>
        </td>
      </tr>
    </div>
  <% end %>
</table>
