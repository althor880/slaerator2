<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
    <div id="user_nav">
      <% if current_user %>
        <%= link_to "Edit Profile", edit_user_path(:current) %>
        <%= link_to "Logout", logout_path %>
      <% else %>
        <%= link_to "Login", login_path %>
      <% end %>
    </div>
    <div id="container">
      <% if permitted_to? :index, :queries %>
        <%= link_to "Manage/Run Queries", queries_path %>
	  <% end %>
	  <% if permitted_to? :index, :sf_users %> 
        <%= link_to "Manage Salesforce Users", sf_users_path %>
	  <% end %>
	  <% if permitted_to? :index, :sf_record_types %>
        <%= link_to "Manage Case/Record Types", sf_record_types_path %>
	  <% end %>
	  <% if permitted_to? :index, :sla_rules %>
	    <%= link_to "Manage SLA Rules", sla_rules_path %>
	  <% end %>
	  <% if permitted_to? :index, :business_hours %>
	    <%= link_to "Manage Business Hours", business_hours_path %>
	  <% end %>
    </div>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

      <% if show_title? %>
        <h1><%=h yield(:title) %></h1>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
