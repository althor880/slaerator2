<% title "Sla Rules" %>

<table>
  <tr>
    <th>Sf Record Type</th>
    <th>Sf Case Priority</th>
    <th>Sf Case Status</th>
    <th>First Contact</th>
    <th>Increment By</th>
  </tr>
  <% for sla_rule in @sla_rules %>
    <tr>
      <td><%=h sla_rule.sf_record_type_name %></td>
      <td><%=h sla_rule.sf_case_priority_name %></td>
      <td><%=h sla_rule.sf_case_status_name %></td>
      <td><%=h sla_rule.first_contact %></td>
      <td><%=h sla_rule.increment_by.minutes.to_utc_offset_s %></td>
      <td><%= link_to "Show", sla_rule %></td>
      <td><%= link_to "Edit", edit_sla_rule_path(sla_rule) %></td>
      <td><%= link_to "Destroy", sla_rule, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Sla Rule", new_sla_rule_path %></p>
